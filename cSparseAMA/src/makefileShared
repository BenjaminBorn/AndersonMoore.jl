FC= gfortran
FFLAGS= -shared -fPIC -c -O2
CC= gcc
CFLAGS= -shared -fPIC -c -O2

allCObjs= callSparseAim.o sparseAim.o sparskit2.o 

allFortObjs=  dgetv0.o dlaqrb.o dmout.o dnaitr.o dnapps.o dnaup2.o \
dnaupd.o dnconv.o dneigh.o dneupd.o dngets.o dsortc.o dstatn.o dvout.o  \
ivout.o ma50ad.o second.o \
ilaenv.o dgeqp3.o dgeqpf.o dlamch.o dlarfg.o dlapy2.o disnan.o dlaisnan.o \
dlarf.o iladlc.o dorgqr.o dorg2r.o dgeesx.o dhseqr.o dlaqr0.o dlabad.o \
dlange.o dgebal.o dgehrd.o dlacpy.o dorghr.o dtrsen.o dtrexc.o dlaexc.o \
dlartg.o dtrsyl.o dlassq.o dlacn2.o dgebak.o

allObjs= $(allFortObjs) $(allCObjs)

sharedLink:	 clean  $(allObjs)
		   gcc -std=gnu99 -shared -fPIC -o libSPARSEAMA.so $(allObjs) -lblas -lgfortran
		   

clean: 
	rm -f *.o
