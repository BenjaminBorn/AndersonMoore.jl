{
  "os": "linux",
  "dist": "trusty",
  "sudo": false,
  "group": "stable",
  "julia": "nightly",
  "script": [
    "if [[ -a .git/shallow ]]; then git fetch --unshallow; fi",
    "julia -e 'Pkg.clone(pwd()); Pkg.build(\"AMA\"); Pkg.test(\"AMA\"; coverage=true)'"
  ],
  "language": "julia",
  "after_success": [
    "julia -e 'cd(Pkg.dir(\"LightGraphs\")); Pkg.add(\"Coverage\"); using Coverage; Codecov.submit(process_folder())'",
    "julia -e 'Pkg.add(\"Documenter\")'",
    "julia -e 'cd(Pkg.dir(\"LightGraphs\")); include(joinpath(\"docs\", \"make.jl\"))'"
  ]
}

